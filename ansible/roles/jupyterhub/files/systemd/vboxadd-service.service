[Unit]
SourcePath=/opt/VBoxGuestAdditions/init/vboxadd-service
Description=
Before=runlevel2.target runlevel3.target runlevel4.target runlevel5.target shutdown.target
After=vboxadd.service
Conflicts=shutdown.target

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
ExecStart=/opt/VBoxGuestAdditions/init/vboxadd-service start
ExecStop=/opt/VBoxGuestAdditions/init/vboxadd-service stop

[Install]
WantedBy=multi-user.target
